<GridLayout rows="*,auto,auto,auto" cols="*">
    <Label id="questionLabel" row="0" col="0" text="{{ languageLabelText }}"  textWrap="true" class="questionText text-center" />
    <Button row="1" id="0" text="{{ langEnglText }}"  class="my-button-confirm"  tap="setLanguage" ></Button>
    <Label row="2" text=" " horizontalAlignment="stretch"></Label>
     <Button row="3" id="1" text="{{ langGerText }}"  class="my-button-confirm"  tap="setLanguage" ></Button>
 </GridLayout>
</Page>

