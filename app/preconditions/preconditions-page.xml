<Page navigatingTo="onNavigatingTo" actionBarHidden="true" class="my-page" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ScrollView>
        <GridLayout rows="auto, auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto" cols="auto,auto">
            <!--
            Rheumatische Erkrankung, Hypertonus, Gefäßerkrankung, Tumorerkrankung, Lungenerkrankung, Herzinsuffizienz, Diabetes, Leukämie/Lymphom, Koronare Herzerkrankung, Lebererkrankung, Nierenerkrankung, Ulkus, HIV
            -->
            <Label row="0" text="{{ preconditionsLabel }}" horizontalAlignment="stretch"></Label>
            <Label row="1" col="0" text="{{ rheumaticLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="1" col="1" id="rheumaticSwitch" checked="{{ rheumaticChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="2" col="0" text="{{ hypertonusLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="2" col="1" id="hypertonusSwitch" checked="{{ hypertonusChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="3" col="0" text="{{ angiopathyLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="3" col="1" id="angiopathySwitch" checked="{{ angiopathyChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="4" col="0" text="{{ tumorLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="4" col="1" id="tumorSwitch" checked="{{ tumorChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="5" col="0" text="{{ lungDiseaseLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="5" col="1" id="lungDiseaseSwitch" checked="{{ lungDiseaseChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="6" col="0" text="{{ cardiacInsufficiencyLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="6" col="1" id="cardiacInsufficiencySwitch" checked="{{ cardiacInsufficiencyChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="7" col="0" text="{{ diabetesLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="7" col="1" id="diabetesSwitch" checked="{{ diabetesChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="8" col="0" text="{{ leukaemiaLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="8" col="1" id="leukaemiaSwitch" checked="{{ leukaemiaChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="9" col="0" text="{{ coronaryLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="9" col="1" id="coronarySwitch" checked="{{ coronaryChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="10" col="0" text="{{ hepatopathyLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="10" col="1" id="hepatopathySwitch" checked="{{ hepatopathyChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="11" col="0" text="{{ kidneyLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="11" col="1" id="kidneySwitch" checked="{{ kidneyChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="12" col="0" text="{{ ulcerLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="12" col="1" id="ulcerSwitch" checked="{{ ulcerChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Label row="13" col="0" text="{{ hivLabel }}" horizontalAlignment="left"></Label> 
            <Switch row="13" col="1" id="hivSwitch" checked="{{ hivChecked }}" isEnabled="true" horizontalAlignment="right" class="my-switch" />
            <Button row="14" col="0" colSpan="2" id="confirmPreconditionsBtn" class="my-button-confirm" tap="onStorePreconditions"></Button> 
        </GridLayout>
    </ScrollView>
</Page>
